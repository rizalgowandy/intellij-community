<idea-plugin package="org.jetbrains.yaml">
  <name>YAML</name>
  <id>org.jetbrains.plugins.yaml</id>
  <vendor>JetBrains</vendor>
  <category>Languages</category>
  <description><![CDATA[
    Provides syntax highlighting and editor features for <a href="https://yaml.org/">YAML</a> language.
  ]]></description>

  <dependencies>
    <plugin id="com.intellij.modules.lang"/>
    <plugin id="com.intellij.modules.json"/>
  </dependencies>
  <content>
    <module name="intellij.yaml" loading="embedded"/>
    <module name="intellij.yaml.editing" loading="required"/>
  </content>
</idea-plugin>